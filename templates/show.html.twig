{% extends 'base.html.twig' %}

{% block body %}

    <body class="text-center">
    <main role="main" class="container">
        <div class="row">
            <div class="col-md-12 blog-main" id="app-1">
                <h3 class="pb-4 mb-4 font-italic border-bottom">
                </h3>
                    <div class="blog-post">
                        <h2 class="blog-post-title">{{ book.name }}</h2>
                        <h5>Автор: {{ book.author }}</h5>
                        <p>Год издания: {{ book.year }}</p>
                        <hr>
                    </div>
            </div>
        </div>
    </main>

    </body>

{% endblock %}

{% block stylesheets %}
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }
    </style>

{% endblock %}