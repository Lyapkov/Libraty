{% extends 'base.html.twig' %}

{% block body %}

    <form class="form-addbook text-center addBook" action="{{ path('addBook') }}"  method="post">
        <h1 class="h3 mb-3 font-weight-normal">Добавьте книгу</h1>
        <label for="inputName" class="sr-only">Название книги</label>
        <input type="text" id="Name" name="Name" class="form-control" placeholder="Введите название" required="" autofocus="">
        <label for="Author" class="sr-only">Password</label>
        <input type="text" id="Author" name="Author" class="form-control" placeholder="Введите автора" required="">
        <label for="Year" class="sr-only">Год издания</label>
        <input type="number" id="Year" name="Year" class="form-control" placeholder="Введите год издания" required="" autofocus=""><br>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Добавить книгу</button>
        <p class="mt-5 mb-3 text-muted">© 2020</p>
    </form>
    <script>
        $(document).ready(function( event ) {
            $( '.addBook' ).submit(function( event ) {
                event.preventDefault();
                $.ajax({
                    type: $(this).attr('method'),
                    url: $(this).attr('action'),
                    data: new FormData(this),
                    contentType: false,
                    cache: false,
                    processData: false,

                    success: function (result) {
                        alert('Книга добавлена!');
                    }
                });
            })
        })
    </script>
{% endblock %}

{% block stylesheets %}
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-addbook {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }
        .form-addbook .checkbox {
            font-weight: 400;
        }
        .form-addbook .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }
        .form-addbook .form-control:focus {
            z-index: 2;
        }
        .form-addbook input[type="number"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }
        .form-addbook input[type="text"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

    </style>

{% endblock %}